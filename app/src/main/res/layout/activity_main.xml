<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/narrationFragment"
            android:name="com.menaces.fate2.NarrationScreenFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_narration_screen"
            tools:layout_editor_absoluteX="-16dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="casual"
            android:text="@string/back_to_stories"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@null"
            tools:layout_editor_absoluteX="16dp"
            tools:ignore="MissingConstraints" />

        <Switch
            android:id="@+id/music_switch"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:textColor="@color/md_theme_dark_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.001"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>